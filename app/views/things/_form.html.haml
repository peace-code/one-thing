= simple_form_for @thing do |f|
  - if @thing.errors.any?
    #errors
      %p
        = @thing.errors.count
      %ul
        - @thing.errors.full_messages.each do |m|
          %li= msg

  .form-group
    = f.input :title, input_html: { class: 'form-control input-lg' }

  .form-group
    = f.input :content, input_html: { class: 'redactor form-control' }, as: :text

  = f.submit '저장하기', class: 'btn btn-primary btn-lg'